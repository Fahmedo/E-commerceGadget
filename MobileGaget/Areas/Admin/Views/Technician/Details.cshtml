@model IEnumerable<MobileGadget.Model.Technician>


<div class="row pb-4">
    @foreach (var technician in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row pb-6">
                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius:5px">
                    <div class="card">
                        <img src="@technician.ImageUrl" class="card-img-top rounded" />
                        <div class="card-body">
                            <div class="pl-1">
                                <p class="card-title h5 text-primary">@technician.CompanyName</p>
                                <p class="card-title  text-info"> Email: <b>@technician.EmailAddress</b></p>
                                <p class="card-title  text-info"> Contact: <b>@technician.PhoneNumber</b></p>
                                 <p class="card-title  text-info"> State: <b>@technician.State</b></p>
                                <p class="card-title  text-info"> Address: <b>@technician.StreetAddress</b></p>

                                <a asp-controller="Technician" asp-action="Index" class="btn btn-secondary" style="width:150px">
                                    Back to List
                                </a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
</div>

